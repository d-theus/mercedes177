.modal-header
  %button.btn.btn-danger.col-xs-2.col-xs-offset-10{ 'ng-click' => '$dismiss()' }
    %span.fa.fa-times
  %h2 Переименовать категорию &laquo;{{category.name}}&raquo;
  %br/
.modal-body
  %form.form-inline{'ng-submit' => '$close(category.name)'}
    .form-group
      %label Название
      %input{ :type => :text, 'ng-model' => 'category.name' }
    - v_submit_tag 'ng-disabled' => '!category.name || category.name.length < 2'
