%header.container-fluid.navbar.navbar-inverse#header
  .navbar-header
    %a.navbar-brand{ title: 'Mercedes177 | Оригинальные запчасти из Европы', href: '/'}
      .col-xs-3
        = image_tag 'logo.svg', class: 'logo'
      .col-xs-9
        .row
          .col-xs-12.brandline Mercedes 177
        .row
          .col-xs-12.tagline Оригинальные&nbsp;запчасти из&nbsp;Европы
  %button.navbar-toggle.collapsed#navbar_toggle{type: 'button', data: { toggle: 'collapse', target: '#navbar_nav'}}
    %span.fa.fa-bars.btn.btn-lg.btn-primary
  %nav.navbar-right.collapse.navbar-collapse#navbar_nav
    .visible-xs-block
      %br/
      %br/
    .navbar-text.navbar-twoline.text-center.hidden-xs
      .row
        .col-xs-12
          %a.tel.text-nowrap.text-inverse{href:'tel:+79647064621'}
            %span.fa.fa-fw.fa-sm.fa-phone
            %span.small 8 964 706 46 21
      .row
        .col-xs-12
          %a.tel.text-nowrap.text-inverse{href:'tel:+79651340430'}
            %span.fa.fa-fw.fa-sm.fa-phone
            %span.small 8 965 134 04 30
    .col-xs-12.visible-xs-inline-block.text-center
      %a.tel.text-nowrap.btn.btn-lg.btn-primary{href:'tel:+79647064621'}
        %span.fa.fa-fw.fa-phone
        Позвонить (+79647064621)
    .visible-xs-block
      %br/
      %br/
    %ul.nav.navbar-nav
      %li
        %a{ href: '/catalog', title: 'Каталог'} Каталог
      %li
        %a{ href: '/about/info', title: 'Инфо'} Инфо
      %li
        %a{ href: '/about/contacts', title: 'Контакты'} Контакты
      - unless admin?
        %li{'ng-controller' => 'CartCtrl'}
          %a#cart{ href: '', title: 'Корзина', 'ng-click' => 'open()'}
            Корзина
            %span.badge{'ng-show' => 'positions.length'} {{positions.length}}
      - if admin?
        .btn-group{'ng-app' => 'catalog', 'dropdown' => true}
          %button.btn.btn-primary.navbar-btn{'type' => 'button', 'dropdown-toggle' => true}
            Администратору
            %span.caret
          %ul.dropdown-menu{role: :menu}
            %li{role: :menuitem}
              %a{href: orders_path} Заказы
            %li{role: :menuitem}
              %a{href: new_item_path(format: :html)} Создать товар
            %li.divider
            %li{role: :menuitem}
              %a{href: destroy_admin_session_path, 'data-method' => :delete} Выйти
    .navbar-text.visible-xs-inline
      %center
        %span.fa.fa-chevron-up.toggle#navbar_toggle_2{data: { toggle: 'collapse', target: '#navbar_nav'}}
