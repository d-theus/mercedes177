.row
  .col-lg-3.col-xs-5.well#catalog_list{'ng-controller' => 'CategoriesCtrl', 'ng-cloak' => true}
    .row
      %center.col-xs-5
        %h3 Категории
      - if admin?
        .col-xs-2.col-xs-offset-1
          %br/
          %button.btn.btn-info{ type: :button, 'ng-click' => 'openNewDialog()'}
            %span.fa.fa-plus
    %accordion#catalog_list_accordion
      %span.fa.fa-gear.fa-spin{ 'ng-if' => '!categories.length' }
      %accordion-group{ 'ng-show' => 'categories.length',
        'ng-repeat' => 'cat in categories',
        'heading' => '{{cat.name}}',
        'template-url' => '/templates/categories/panel',
        'ng-click' => 'updateLocation(cat)',
        'is-open' => 'cat.current' }
        - if admin?
          %button.btn.btn-danger.btn-sm.pull-right{ type: :button,
            'ng-click' => 'delete(cat)',
            'ng-if' => 'cat.item_count == 0' }
            %span.fa.fa-trash-o
        .list-group{ name: 'categories'}
          %a.list-group-item.clearfix{'href' => '', 'ng-click' => 'setItem(item)', 'ng-repeat' => 'item in items', 'ng-if' => 'item.category_id == cat.id'}
            = raw '{{ item.name }}'
            %span.pull-right
              = raw '{{item.serial}}'
  .col-lg-9.col-xs-7.container
    .col-xs-12.well#catalog_container{'ng-controller' => 'ItemCtrl'}
      =render template: 'items/show', layout: false
