.modal-header
  %button.btn.btn-danger.col-xs-2.pull-right{ 'ng-click' => '$dismiss()'}
    %span.fa.fa-times
  %h2 Результаты поиска по запросу '{{query}}'
  %br/

.modal-body
  .container-fluid
    .row
      .col-xs-10.col-xs-offset-1
        %ul.list-group{'ng-if' => 'results.length'}
          %li.list-group-item{'ng-repeat' => 'item in results'}
            %p
              %button.btn.btn-primary{'type' => 'button', 'ng-click' => 'viewItem(item.id)'}
                %span.fa.fa-fw.fa-eye
              {{ item.name }}
            %p.text-info{'ng-if' => 'item.serial'}
              Серийный номер: {{ item.serial }}
            %p.text-info{'ng-if' => 'item.body'}
              Кузов/год: {{ item.body }}
        %h3.text-center.text-danger{'ng-if' => '!results.length'}
          Ничего не найдено.

