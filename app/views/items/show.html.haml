.row{'ng-if' => '!ready'}
  .col-xs-12.text-center
    %span.fa.fa-lg.fa-gear.fa-spin

.row{'ng-if' => 'ready && item'}
  = render partial: 'items/header'
.row{'ng-if' => 'ready && item'}
  .col-xs-5
    = render partial: 'items/photos'
  .col-xs-5.col-xs-offset-1
    - if admin?
      = render partial: 'items/dashboard_admin'
    - else
      = render partial: 'items/dashboard_user'

.row{'ng-if' => 'ready && !item'}
  = render partial: 'items/no_item'
