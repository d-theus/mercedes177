.modal-header
  %button.btn.btn-danger.col-xs-2.col-xs-offset-10{ 'ng-click' => '$dismiss()' }
    %span.fa.fa-times
  %h2 Создать категорию
  %br/
.modal-body
  %form.form-inline{'ng-submit' => '$close(newCategory.name)'}
    .form-group
      %label Название
      %input{ :type => :text, 'ng-model' => 'newCategory.name' }
    - v_submit_tag 'ng-disabled' => '!newCategory.name || newCategory.name.length < 2'
